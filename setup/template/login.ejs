<!doctype html>
<html ng-app="wikiproject">
	<head>
		<meta charset="UTF-8">
		<title><%= wiki_name %> - Manager login</title>
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<link rel="stylesheet" type="text/css" href="css/bootstrap.min.css" />
		<link rel="stylesheet" type="text/css" href="css/bootstrap-responsive.min.css" />
		<link rel="stylesheet" type="text/css" href="css/main.css" rel="stylesheet" />

		<script type="text/javascript" src="js/jquery.js"></script>
		<script type="text/javascript" src="js/bootstrap.min.js"></script>
		<script type="text/javascript" src="js/angular.min.js"></script>
		<script type="text/javascript" src="js/angular-strap.js"></script>

		<script type="text/javascript" src="js/ng_main.js"></script>
		<script type="text/javascript" src="js/login_ng_main.js"></script>
	</head>
	<body>
		<div ng-controller="login">
			<div class="navbar navbar-inverse navbar-fixed-top">
				<div class="navbar-inner">
					<div class="container">
						<button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
						  <span class="icon-bar"></span>
						  <span class="icon-bar"></span>
						  <span class="icon-bar"></span>
						</button>
						<a class="brand" href="./index.html"><%= wiki_name %></a>
						<div class="navbar-text pull-right">
								<input type="text" ng-model="searchText" class="input-medium search-query" placeholder="Search article..." ng-enter="searchArticle()">
								<button class="btn" ng-click="searchArticle()" style="margin-top: 0px;"><i class="icon-search"></i></button>
								  {{ managerSession ? 'manager': 'guest' }}
							</div>
						<div class="nav-collapse collapse">
							<ul class="nav">
								<li><a href="./index.html">Home</a></li>
								<li><a href="./item_list.html">Article</a></li>
								<li><a href="./category_list.html">Category</a></li>
								<!-- manager session -->
								<li ng-show="managerSession" class="">
									<a href="./category_new.html">new Category</a>
								</li>
							</ul>
						</div>
					</div>
				</div>
	    </div>

	    <header class="jumbotron subhead" id="overview">
				<div class="container">
					<h1>Manager login</h1>
					<p class="lead"></p>
				</div>
			</header>

			<div class="container">
				<div class="row">
					<div class="span3" style="margin:0 auto; float:none;">
						<section id="content">
							
							<div class="well" >
								
								<p>
									<h4>username</h4>
									<input type="text" ng-model="username">
								</p>

								<p>
									<h4>password</h4>
									<input type="password" ng-model="password" ng-enter="login()">
								</p>
								
								<button class="btn btn-primary" ng-click="login()">確定</button>
							</div>

						</section>
					</div>
				</div>
			</div>

			<footer class="footer">
				<div class="container">
					powered by Easy2Wiki<br>
					<% if (license == 1) { %>
						<a href="https://creativecommons.org/licenses/by-sa/3.0/tw/">CC-BY-SA</a>
					<% } %>
				</div>
			</footer>
		</div>
	</body>
</html>